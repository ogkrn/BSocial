{
  "name": "bsocial",
  "version": "1.0.0",
  "description": "BSocial - University exclusive social media platform for UTU students",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:web": "npm run dev --workspace=@bsocial/web",
    "dev:api": "npm run dev --workspace=@bsocial/api",
    "dev:mobile": "npm run dev --workspace=@bsocial/mobile",
    "db:migrate": "npm run db:migrate --workspace=@bsocial/api",
    "db:seed": "npm run db:seed --workspace=@bsocial/api",
    "db:studio": "npm run db:studio --workspace=@bsocial/api"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
